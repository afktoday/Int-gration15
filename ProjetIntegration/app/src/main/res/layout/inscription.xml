<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/test">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nom"
        android:ems="10"
        android:id="@+id/nom"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Prénom"
        android:ems="10"
        android:id="@+id/prenom"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/nom"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint="Email"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/mdp"
        android:layout_alignLeft="@+id/mdp"
        android:layout_alignStart="@+id/mdp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/mdp"
        android:hint="mot de passe"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/Cmdp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Cmdp"
        android:hint="confirmer mdp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/defaut"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/defaut"
        android:hint="texte par défaut"
        android:gravity="center_horizontal|center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enregistrer"
        android:hint="Enregistrer"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@+id/mdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp" />

</RelativeLayout>
